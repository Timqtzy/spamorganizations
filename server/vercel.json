{
  "version": 2,
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/about/*",
      "destination": "/index.html"
    },
    {
      "source": "/blog/*",
      "destination": "/index.html"
    },
    {
      "source": "/contact/*",
      "destination": "/index.html"
    },
    {
      "source": "/homepage/*",
      "destination": "/index.html"
    },
    {
      "source": "/register/*",
      "destination": "/index.html"
    }
  ]
}
