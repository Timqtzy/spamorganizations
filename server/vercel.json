{
  "version": 2,
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    }
  ],
  "rewrites": [
    {
      "src": "/about/*",
      "dest": "/"
    },
    {
      "src": "/blog/*",
      "dest": "/"
    },
    {
      "src": "/contact/*",
      "dest": "/"
    },
    {
      "src": "/homepage/*",
      "dest": "/"
    },
    {
      "src": "/register/*",
      "dest": "/"
    }
  ]
}
